  <script>
    function sendToWhatsApp(e){
      e.preventDefault();
      const phone = "62881026375821"; // ganti dengan nomor WA tujuan (format internasional tanpa +)
      const level = document.getElementById("level").value;
      const height = document.getElementById("height").value;
      const age = document.getElementById("age").value;
      const waist = document.getElementById("waist").value;
      const hip = document.getElementById("hip").value;
      const inseam = document.getElementById("inseam").value;
      const thigh = document.getElementById("thigh").value;
      const fit = document.getElementById("fit").value;

      const message = `Halo, saya ingin pesan seragam celana:\n\n` +
        `ğŸ‘• Jenis Sekolah: ${level}\n` +
        `ğŸ“ Tinggi: ${height} cm\n` +
        `ğŸ‚ Umur: ${age} tahun\n` +
        `ğŸ§â€â™‚ï¸ Pinggang: ${waist} cm\n` +
        `ğŸ‘ Pinggul: ${hip} cm\n` +
        `ğŸ“ Inseam: ${inseam} cm\n` +
        `ğŸ¦µ Paha: ${thigh} cm\n` +
        `ğŸ‘– Fit: ${fit}`;

      const url = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
